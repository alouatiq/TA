# === Copy this file to ".env" and fill in as needed ===========================
# Core runtime
PYTHONUNBUFFERED=1
PYTHONIOENCODING=utf-8

# --- Market providers ---------------------------------------------------------
# Prefer TwelveData for price/history if present
TWELVEDATA_API_KEY=
# Optional crypto fallback
CRYPTOCOMPARE_API_KEY=

# --- LLM (optional) -----------------------------------------------------------
# Only required if you intend to use strategy_llm.py
OPENAI_API_KEY=

# --- Logging / diagnostics ----------------------------------------------------
# Set to DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# --- Regional defaults (optional) --------------------------------------------
# Used by CLI when no selection is made; must match keys in data/markets.yml
DEFAULT_REGION=Europe
DEFAULT_MARKET=LSE
